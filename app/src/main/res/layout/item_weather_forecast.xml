<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="itemWeatherForecastViewModel"
            type="com.zoardgeocze.testehbsis.viewModel.ItemWeatherForecastViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_weather_forecast"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/forecast_climate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{itemWeatherForecastViewModel::onClickItem}">

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/city_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_name"
                android:layout_margin="20dp"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>